{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "credentials/**/*",
        "nodes/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}