###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
API_BASE_PATH=api
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
TZ=UTC

###### Router configuration
ROUTER_CONFIG_PATH=./router.yaml

# You can define any environment variables here and reference them in router.yaml
# using ${VAR_NAME} syntax. The following are just examples for the default config:
# OPENROUTER_API_KEY=your_openrouter_key
# DEEPSEEK_API_KEY=your_deepseek_key
# MY_CUSTOM_PROVIDER_KEY=your_custom_key